<datasources xmlns="http://www.talend.com/mdm/datasources">

    <!-- ==================================================================== -->
    <!-- H2 DEFAULT DATASOURCE                                                -->
    <!-- ==================================================================== -->
    <datasource name="RDBMS-1">
        <master>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2://tmp/data/master/${container}</connection-url>
                <connection-username>sa</connection-username>
                <connection-password></connection-password>
                <fulltext-index-directory>/var/lucene/indexes/RDBMS-1</fulltext-index-directory>
            </rdbms-configuration>
        </master>
        <staging>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2://tmp/data/staging/${container}</connection-url>
                <connection-username>sa</connection-username>
                <connection-password></connection-password>
            </rdbms-configuration>
        </staging>
    </datasource>

</datasources>
